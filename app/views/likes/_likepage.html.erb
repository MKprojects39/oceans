<% if @articles == likes_articles %>
  <%= button_to article_like_path(likes, article_id: likes_articles.id), method: :delete, id: "like-button", class: "aa",remote: true do %> 
    <%= image_tag("icon_red_heart.png") %>
    <span>
      <%= likes_articles.likes_count %>
    </span>
  <% end %>
<% else %>
  <%= button_to article_likes_path(likes_articles),id: "like-button", class: "aa",remote: true do %>  
    <%= image_tag("icon_heart.png") %>
    <span class="aaa">
      <%= likes_articles.likes_count %>
    </span>
  <% end %>
<% end %>