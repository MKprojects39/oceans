<% if article.like_user(current_user.id) %>
  <%= button_to article_like_path(likes, article_id: article.id), method: :delete, id: "like-button", class: "aa",remote: true do %> 
    
    <div><%= image_tag("icon_red_heart.png") %> <%= article.likes_count %></div>

  <% end %>
<% else %>
  <%= button_to article_likes_path(article),id: "like-button", class: "aa",remote: true do %>  
    
    <span class="aaa">
       <div><%= image_tag("icon_heart.png") %> <%= article.likes_count %></div>
    </span>
  <% end %>
<% end %>